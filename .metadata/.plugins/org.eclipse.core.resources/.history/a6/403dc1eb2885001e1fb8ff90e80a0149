#include <stdint.h>
#include "led.h"
#include "button.h"

int main(void)
{
	LedControl_Init();
	Button_Init();

	while(1)
	{
		while (Button_GetLogicInputPin(BUTTON_BOARD_ID) == 0)
		{
			LedControl_SetColorGeneral(LED_KIT_ID1, LED_COLOR_GREEN, 100);
			if (Button_GetLogicInputPin(BUTTON_BOARD_ID) == 1) LedControl_SetColorGeneral(LED_KIT_ID1, LED_COLOR_GREEN, 00l)
		}
	}
}
