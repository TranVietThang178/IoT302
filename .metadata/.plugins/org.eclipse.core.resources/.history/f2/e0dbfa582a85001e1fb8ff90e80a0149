#include <stdint.h>
#include "led.h"
#include "button.h"

int main(void)
{
    // Bước 1: Cấu hình chân GPIO cho LED và nút
    LedControl_Init();
    Button_Init();

    // Biến để theo dõi trạng thái hiện tại của LED
    uint8_t ledState = 0;

    while (1)
    {
        // Bước 3: Bật đèn LED với độ sáng 100%
        LedControl_SetColorGeneral(LED_BOARD_ID, LED_COLOR_GREEN, 100);

        // Bước 4: Kiểm tra trạng thái nút ấn
        while (Button_GetLogicInputPin(BUTTON_BOARD_ID) == 0)
        {
            // Trong vòng lặp này, chúng ta có thể thực hiện các tác vụ khác nếu cần

            // Kiểm tra trạng thái hiện tại của LED và đảo ngược nó
            if (ledState == 0)
            {
                LedControl_SetColorGeneral(LED_BOARD_ID, LED_COLOR_GREEN, 0); // Tắt LED
                ledState = 1; // Cập nhật trạng thái
            }
            else
            {
                LedControl_SetColorGeneral(LED_BOARD_ID, LED_COLOR_GREEN, 100); // Bật LED
                ledState = 0; // Cập nhật trạng thái
            }
        }

        // Bước 4: Kiểm tra trạng thái nút khi không được ấn
        if (Button_GetLogicInputPin(BUTTON_BOARD_ID) == 1)
        {
            // Chúng ta có thể thực hiện các tác vụ khác nếu cần
        }
    }

    return 0;
}
