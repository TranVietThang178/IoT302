#include <stdio.h>

int main() {
    int i, j, space;

    // Number of rows in the triangle
    int rows = 5;

    // Loop through each row
    for (i = 1; i <= rows; i++) {
        // Print spaces before the asterisks
        for (space = 1; space <= rows - i; space++) {
            printf(" ");
        }

        // Print asterisks
        for (j = 1; j <= 2 * i - 1; j++) {
            printf("*");
        }

        // Move to the next line after printing each row
        printf("\n");
    }

    return 0;
}
