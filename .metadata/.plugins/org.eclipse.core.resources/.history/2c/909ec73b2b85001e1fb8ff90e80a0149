#include <stdint.h>
#include "led.h"
#include "button.h"

int main(void)
{
    // Bước 1: Cấu hình chân GPIO cho LED và nút
    LedControl_Init();
    Button_Init();

    // Biến để theo dõi trạng thái hiện tại của LED và nút
    uint8_t ledState = 0;
    uint8_t buttonState = 0;
    uint8_t lastButtonState = 1; // Assume the button is initially not pressed

    while (1)
    {
        // Bước 3: Bật đèn LED với độ sáng 100%
        LedControl_SetColorGeneral(LED_BOARD_ID, LED_COLOR_GREEN, 100);

        // Bước 4: Kiểm tra trạng thái nút
        buttonState = Button_GetLogicInputPin(BUTTON_BOARD_ID);

        // Kiểm tra xem nút có chuyển từ trạng thái không được ấn sang được ấn không
        if (buttonState == 0 && lastButtonState == 1)
        {
            // Đảo trạng thái của LED
            ledState = (ledState == 0) ? 1 : 0;

            // Cập nhật trạng thái cuối cùng của nút
            lastButtonState = 0;
        }
        else if (buttonState == 1)
        {
            // Nếu nút không được ấn, cập nhật trạng thái cuối cùng của nút
            lastButtonState = 1;
        }

        // Cập nhật trạng thái của LED
        if (ledState == 1)
        {
            LedControl_SetColorGeneral(LED_BOARD_ID, LED_COLOR_GREEN, 100); // Bật LED
        }
        else
        {
            LedControl_SetColorGeneral(LED_BOARD_ID, LED_COLOR_GREEN, 0); // Tắt LED
        }
    }

    return 0;
}
