#include <stdio.h>

int main(void) {
	for (int i = 0; i < 11; i++){
		if (i < 6) {
			for (int j = 0; j < 5 - i; j++) {
				printf(" ");
			}
			for (int k = 1; k <= 2 * i - 1; k++) {
				printf("*");
			}
		} else {
			for (int j = 0; j < i - 3; j++) {
				printf(" ");
			}
			for (int k = 0; k < 2 * i - 3; k++) {
				printf("*");
			}
		}
		printf("\n");
	}

	return 0;
}

